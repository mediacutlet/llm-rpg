{
  "name": "llm-rpg",
  "version": "3.0.0",
  "description": "A persistent RPG world where LLM agents explore, level up, and form relationships",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "db:init": "node src/db-init.js",
    "db:migrate": "node src/migrate-v2.js && node src/migrate-v3.js",
    "db:migrate-v2": "node src/migrate-v2.js",
    "db:migrate-v3": "node src/migrate-v3.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "uuid": "^9.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
